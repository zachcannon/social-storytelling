@{
    ViewBag.Title = "Story View Page";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Social Story Telling</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/storyview.js")

</head>
<body>

    <div class="container body-content">
        <div class="jumbotron">
            <p>Current Story Status: @ViewBag.CurrentStoryStatus</p>
            <p id="entrycontainer">ENTRIES: <br></p>
            <p id="pendingentrycontainer">PENDING ENTRIES: <br></p>
        </div>

        <div>
            <p>
                <br /> ----------------------PAGE ACTIONS---------------------------
            </p>
        </div>

        <div>
            <p><br />Add New Pending Entry</p>
            <form action="@Url.Action("AddNewPendingEntry", "StoryView")" method="post">
                Text:<input type="text" name="text"><br>
                <input type="submit">
            </form>
        </div>

        <div>
            <p><br />Vote For Pending Entry</p>
            <form action="@Url.Action("VoteForPendingEntry", "StoryView")" method="post">
                Pending Entry Id:<input type="text" name="pendingEntryId"><br>
                <input type="submit">
            </form>
        </div>

        <div>
            <p>
                <br /> ----------------------ADMIN COMMANDS BELOW---------------------------
            </p>
        </div>

        <div>
            <p><br />Add New Entry</p>
            <form action="@Url.Action("AddNewEntry", "StoryView")" method="post">
                Text:<input type="text" name="text"><br>
                StoryID: <input type="text" name="storyId"><br>
                <input type="submit">
            </form>
        </div>

        <div>
            <p><br />Promote Pending Entry</p>
            <form action="@Url.Action("PromotePendingEntry", "StoryView")" method="post">
                Pending Entry Id:<input type="text" name="idToPromote"><br>
                <input type="submit">
            </form>
        </div>

        <div>
            <p><br />Promote Highest Pending Entry for Given Story</p>
            <form action="@Url.Action("PromoteHighestPendingEntry", "StoryView")" method="post">
                Story Id:<input type="text" name="idToPromote"><br>
                <input type="submit">
            </form>
        </div>

        <div>
            <p><br />Remove Pending Entry</p>
            <form action="@Url.Action("RemovePendingEntry", "StoryView")" method="post">
                Id To Remove:<input type="text" name="idToRemove"><br>
                <input type="submit">
            </form>
        </div>

        <div>
            <p><br />Remove Entry</p>
            <form action="@Url.Action("RemoveEntry", "StoryView")" method="post">
                Id To Remove:<input type="text" name="idToRemove"><br>
                <input type="submit">
            </form>
        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>

