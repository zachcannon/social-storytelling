@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Social Story Telling</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/home.js")

</head>
<body>
    
    <div class="container body-content">
        <div class="jumbotron">
            <p id="storycontainer">STORIES: <br></p>
            <p id="entrycontainer">ENTRIES: <br></p>
            <p id="pendingentrycontainer">PENDING ENTRIES: <br></p>
        </div>

        <div>
            <p><br />Register</p>
            <form action="#" onsubmit="return registerUser(this);">
                Username:<input type="text" name="username"><br>
                Password: <input type="text" name="password"><br>
                <input type="submit">
            </form>
            <p id="registerReturn">RegisterReturn: </p>
        </div>
            
        <div>
            <p><br />Log In</p>
            <form action="#" onsubmit="return loginUser(this);">
                Username:<input type="text" name="username"><br>
                Password: <input type="text" name="password"><br>
                <input type="submit">
            </form>
            <p id="loginReturn">LoginReturn: </p>
        </div>

        <div>
            <p><br />Add New Story</p>
            <form action="#" onsubmit="return addStory(this);">
                Title:<input type="text" name="title"><br>
                Prompt: <input type="text" name="prompt"><br>
                <input type="submit">
            </form>
        </div>

        <div>
            <p><br />Remove Story</p>
            <button id="remove-story-button">Remove Story!</button>
            <input id="story-id-to-remove" value="1" />
        </div>

        <div>
            <p><br />Add New Entry</p>
            <form action="#" onsubmit="return addEntry(this);">
                Text:<input type="text" name="text"><br>
                Author: <input type="text" name="author"><br>
                StoryID: <input type="text" name="storyId"><br>
                <input type="submit">
            </form>
        </div>
                
        <div>
            <p><br />Remove Entry</p>
            <button id="remove-entry-button">Remove Entry!</button>
            <input id="entry-id-to-remove" value="1" />
        </div>

        <div>
            <p><br />Specific Entry #</p>
            <button id="choose-story-button">Choose Story: </button>
            <input id="choose-story-id" value="1" />

            <p id="specific-entries">Specific Entries<br /></p>
        </div>

        <div>
            <p><br />Add New Pending Entry</p>
            <form action="#" onsubmit="return addPendingEntry(this);">
                Text:<input type="text" name="text"><br>
                Author: <input type="text" name="author"><br>
                StoryID: <input type="text" name="storyId"><br>
                <input type="submit">
            </form>
        </div>

        <div>
            <p><br />Remove Pending Entry</p>
            <button id="remove-pending-entry-button">Remove Pending Entry!</button>
            <input id="pending-entry-id-to-remove" value="1" />
        </div>

        <div>
            <p><br />Vote For Pending Entry</p>
            <form action="#" onsubmit="return voteForPendingEntry(this);">
                Pending Entry Id:<input type="text" name="pendingEntryId"><br>
                Username: <input type="text" name="username"><br>
                Password: <input type="text" name="password"><br>
                <input type="submit">
            </form>
        </div>

        <div>
            <p><br />Promote Pending Entry</p>
            <button id="promote-pending-entry-button">Promote Pending Entry!</button>
            <input id="pending-entry-id-to-promote" value="1" />
        </div>

        <p style="display:none" id="loggedInUser"></p>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html>

